{
  "name": "hsv-neuwied",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx,yml,yaml}\" --ignore-path .gitignore",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "@mheob/prettier-config": "^1.0.1",
    "eslint-config-custom": "workspace:*",
    "prettier": "^2.7.1",
    "turbo": "^1.3.1"
  },
  "packageManager": "pnpm@7.5.0",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
