{
  "name": "hsv-neuwied",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "check-lock-files": "ts-node scripts/checkLockFiles.ts",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx,yml,yaml}\" --ignore-path .prettierignore",
    "lint": "turbo run lint"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm commitlint --edit ${1}",
    "pre-push": "pnpm check-lock-files"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@mheob/prettier-config": "^1.0.1",
    "@types/node": "^18.0.3",
    "eslint-config-custom": "workspace:*",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.0",
    "ts-node": "^10.8.2",
    "tsconfig": "workspace:*",
    "turbo": "^1.3.1",
    "typescript": "^4.7.4"
  },
  "packageManager": "pnpm@7.5.0",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
