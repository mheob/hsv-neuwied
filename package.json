{
  "name": "hsv-neuwied",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm exec turbo run build",
    "dev": "pnpm exec turbo run dev --parallel",
    "format": "pnpm exec prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx,yml,yaml}\" \"!pnpm-*.yaml\"",
    "lint": "pnpm exec turbo run lint",
    "pnpm:devPreinstall": "pnpm exec simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged",
    "commit-msg": "pnpm exec commitlint --edit ${1}",
    "pre-push": "pnpm exec ts-node scripts/checkLockFiles.ts"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "!(pnpm-)*.{js,jsx,ts,tsx,json,md,mdx,yml,yaml}": "pnpm exec prettier --write",
    "package.json": "pnpm dlx sort-package-json"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@mheob/prettier-config": "^1.0.1",
    "@types/node": "^18.0.3",
    "eslint-config-custom": "workspace:*",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.0",
    "ts-node": "^10.8.2",
    "tsconfig": "workspace:*",
    "turbo": "^1.3.1",
    "typescript": "^4.7.4"
  },
  "packageManager": "pnpm@7.5.0",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
